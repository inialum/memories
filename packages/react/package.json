{
	"name": "@inialum/memories-react",
	"version": "0.4.0",
	"description": "React component library for the Memories - INIALUM Design System",
	"type": "module",
	"author": {
		"name": "INIALUM - INIAD Alumni Meetings",
		"email": "contact@inialum.org",
		"url": "https://inialum.org"
	},
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/inialum/memories",
		"directory": "packages/react"
	},
	"publishConfig": {
		"access": "public",
		"provenance": true
	},
	"keywords": [
		"react",
		"design-system",
		"tailwindcss",
		"ui"
	],
	"engines": {
		"node": ">=20.0.0"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./*": {
			"import": {
				"types": "./dist/components/*/index.d.ts",
				"default": "./dist/components/*/index.js"
			}
		}
	},
	"files": [
		"./dist/**/*.js",
		"./dist/**/*.d.ts"
	],
	"scripts": {
		"dev": "pnpm run storybook:dev",
		"build": "vite build",
		"lint": "biome check",
		"fix": "biome check --write",
		"storybook:dev": "storybook dev -p 6007 --no-open",
		"storybook:build": "storybook build",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"react-remove-scroll": "^2.7.1"
	},
	"devDependencies": {
		"@inialum/memories-tailwind-theme": "workspace:*",
		"@storybook/addon-a11y": "^10.0.8",
		"@storybook/addon-docs": "^10.0.8",
		"@storybook/addon-links": "^10.0.8",
		"@storybook/react-vite": "^10.0.8",
		"@svgr/plugin-svgo": "^8.1.0",
		"@tailwindcss/vite": "^4.1.17",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react-swc": "^4.2.2",
		"globby": "^16.0.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"storybook": "^10.0.8",
		"tailwindcss": "^4.1.17",
		"vite": "^7.2.2",
		"vite-plugin-dts": "^4.5.4",
		"vite-plugin-svgr": "^4.5.0"
	},
	"peerDependencies": {
		"@inialum/memories-tailwind-theme": ">=0.3.2",
		"react": ">= 19.0.0",
		"react-dom": ">= 19.0.0",
		"tailwindcss": ">= 4.0.0"
	}
}
