{
	"name": "@inialum/memories-monorepo",
	"type": "module",
	"private": true,
	"license": "Apache-2.0",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev --no-cache --continue",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"typecheck": "turbo run typecheck",
		"changeset": "changeset",
		"version:ci": "changeset version && biome format --write",
		"publish:ci": "pnpm publish -r && changeset tag",
		"clean": "turbo clean",
		"memories-css": "pnpm --filter \"./packages/css\"",
		"memories-react": "pnpm --filter \"./packages/react\""
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.9",
		"@types/node": "^20.16.1",
		"turbo": "^2.1.0",
		"typescript": "^5.5.4"
	},
	"packageManager": "pnpm@9.12.3+sha256.24235772cc4ac82a62627cd47f834c72667a2ce87799a846ec4e8e555e2d4b8b"
